@model ToDo_App.Models.LoginModel

<h2>Log in</h2>

<a asp-action="Register" asp-controller="Account">Registration</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email">Enter Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Password">Enter Password</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Log in" class="btn btn-primary" />
                </div>
            </div>
        </form>
        </div>
</div>