@model ToDo_App.Models.RegisterModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Email">Enter Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div>
            <label asp-for="FirstName">Enter first name</label><br />
            <input type="text" asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>
        <div>
            <label asp-for="LastName">Enter last name</label><br />
            <input type="text" asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>
        <div>
            <label asp-for="Address">Enter address</label><br />
            <input type="text" asp-for="Address" />
            <span asp-validation-for="Address" />
        </div>
        <div>
            <label asp-for="Password">Enter Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="PasswordConfirm">Confirm Password</label><br />
            <input asp-for="PasswordConfirm" />
            <span asp-validation-for="PasswordConfirm" />
        </div>
        <div>
            <input type="submit" value="Registration" />
        </div>
    </div>
</form>
